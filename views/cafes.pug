extends layout

block content
  h1 Lista de Cafés
  ul
    each cafe in cafes
      li
        h2= cafe.name
        p Precio: $#{cafe.price}
        p Stock: #{cafe.stock}
        p Categoría: #{cafe.category}
        button(onclick=`editCafe('${cafe.id}')`) Editar
        button(onclick=`deleteCafe('${cafe.id}')`) Eliminar
        hr
