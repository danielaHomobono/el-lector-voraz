extends layout

block scripts
  script(src="/socket.io/socket.io.js")
  script(src="/js/chat.js", defer)

block content
  .chat-container
    .chat-header
      h1 Chat de Soporte
      .chat-status
        span.status-indicator#status-indicator
        span.status-text#status-text Conectando...
    
    .chat-messages#chat-messages
      .welcome-message
        .message-content
          h3 ¡Bienvenido al chat de soporte!
          p Estamos aquí para ayudarte. ¿En qué podemos asistirte hoy?
        .message-time= new Date().toLocaleTimeString('es-ES', {hour: '2-digit', minute: '2-digit'})
    
    .chat-input-container
      .input-wrapper
        textarea(
          id="message-input" 
          placeholder="Escribe tu mensaje aquí..." 
          rows="3"
          maxlength="500"
          aria-label="Mensaje de chat"
        )
        .input-actions
          button(
            type="button" 
            id="send-button" 
            class="send-button"
            aria-label="Enviar mensaje"
            disabled
          )
            svg(width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2")
              line(x1="22" y1="2" x2="11" y2="13")
              polygon(points="22,2 15,22 11,13 2,9")
          span.char-count#char-count 0/500
    
    .chat-info
      .info-card
        h3 Información del chat
        ul
          li 
            strong Horarios de atención:
            br
            | Lunes a Viernes: 9:00 - 18:00
            br
            | Sábados: 10:00 - 16:00
          li 
            strong Tiempo de respuesta:
            br
            | Generalmente respondemos en menos de 5 minutos
          li 
            strong Tipos de consultas:
            br
            | • Información sobre productos
            br
            | • Estado de pedidos
            br
            | • Problemas técnicos
            br
            | • Sugerencias y comentarios

  script.
    // Pasar datos del usuario al JavaScript
    window.userData = !{userData};

  style.
    .chat-container {
      max-width: 800px;
      margin: 0 auto;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      height: calc(100vh - 200px);
      display: flex;
      flex-direction: column;
    }

    .chat-header {
      background: linear-gradient(135deg, #8c6d62 0%, #6d5046 100%);
      color: white;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-shrink: 0;
    }

    .chat-header h1 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 600;
    }

    .chat-status {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .status-indicator {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #ccc;
      animation: pulse 2s infinite;
    }

    .status-indicator.connected {
      background: #4caf50;
    }

    .status-indicator.disconnected {
      background: #f44336;
    }

    @keyframes pulse {
      0% { opacity: 1; }
      50% { opacity: 0.5; }
      100% { opacity: 1; }
    }

    .chat-messages {
      flex: 1;
      overflow-y: auto;
      padding: 20px;
      background: #f8f9fa;
      min-height: 300px;
    }

    .message {
      margin-bottom: 16px;
      display: flex;
      flex-direction: column;
    }

    .message.client {
      align-items: flex-end;
    }

    .message.support {
      align-items: flex-start;
    }

    .message-content {
      max-width: 70%;
      padding: 12px 16px;
      border-radius: 18px;
      position: relative;
      word-wrap: break-word;
    }

    .message.client .message-content {
      background: linear-gradient(135deg, #8c6d62 0%, #6d5046 100%);
      color: white;
      border-bottom-right-radius: 4px;
    }

    .message.support .message-content {
      background: white;
      color: #333;
      border: 1px solid #e0e0e0;
      border-bottom-left-radius: 4px;
    }

    .message-time {
      font-size: 0.75rem;
      color: #666;
      margin-top: 4px;
      padding: 0 4px;
    }

    .welcome-message {
      text-align: center;
      margin-bottom: 20px;
    }

    .welcome-message .message-content {
      background: linear-gradient(135deg, #e9c46a 0%, #d4a373 100%);
      color: #333;
      border-radius: 12px;
      max-width: 100%;
    }

    .chat-input-container {
      padding: 20px;
      background: white;
      border-top: 1px solid #e0e0e0;
      flex-shrink: 0;
    }

    .input-wrapper {
      position: relative;
    }

    #message-input {
      width: 100%;
      padding: 12px 50px 12px 16px;
      border: 2px solid #e0e0e0;
      border-radius: 25px;
      resize: none;
      font-family: inherit;
      font-size: 14px;
      transition: border-color 0.3s ease;
      box-sizing: border-box;
    }

    #message-input:focus {
      outline: none;
      border-color: #8c6d62;
    }

    .input-actions {
      position: absolute;
      right: 8px;
      top: 50%;
      transform: translateY(-50%);
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .send-button {
      background: #8c6d62;
      color: white;
      border: none;
      border-radius: 50%;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .send-button:hover:not(:disabled) {
      background: #6d5046;
      transform: scale(1.05);
    }

    .send-button:disabled {
      background: #ccc;
      cursor: not-allowed;
    }

    .char-count {
      font-size: 0.75rem;
      color: #666;
    }

    .chat-info {
      padding: 20px;
      background: #f8f9fa;
      border-top: 1px solid #e0e0e0;
      flex-shrink: 0;
    }

    .info-card {
      background: white;
      padding: 16px;
      border-radius: 8px;
      border-left: 4px solid #8c6d62;
    }

    .info-card h3 {
      margin: 0 0 12px 0;
      color: #8c6d62;
      font-size: 1.1rem;
    }

    .info-card ul {
      margin: 0;
      padding-left: 20px;
    }

    .info-card li {
      margin-bottom: 8px;
      line-height: 1.4;
    }

    .typing-indicator {
      display: none;
      align-items: center;
      gap: 8px;
      padding: 8px 16px;
      color: #666;
      font-style: italic;
    }

    .typing-dots {
      display: flex;
      gap: 4px;
    }

    .typing-dots span {
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background: #8c6d62;
      animation: typing 1.4s infinite ease-in-out;
    }

    .typing-dots span:nth-child(1) { animation-delay: -0.32s; }
    .typing-dots span:nth-child(2) { animation-delay: -0.16s; }

    @keyframes typing {
      0%, 80%, 100% { transform: scale(0); }
      40% { transform: scale(1); }
    }

    @media (max-width: 768px) {
      .chat-container {
        height: calc(100vh - 150px);
        margin: 10px;
        border-radius: 8px;
      }

      .message-content {
        max-width: 85%;
      }

      .chat-header {
        padding: 15px;
      }

      .chat-header h1 {
        font-size: 1.2rem;
      }
    } 